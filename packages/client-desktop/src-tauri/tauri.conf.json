{
  "package": {
    "productName": "ZenSpace",
    "version": "0.1.57"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:8080",
    "beforeDevCommand": "pnpm run serve",
    "beforeBuildCommand": "pnpm run build"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.zenspace.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://zenspace.cf/cdn/releases/{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFNTQwQkMyQjBDQTYzNEIKUldSTFk4cXd3Z3RVem40enhDaHBJNkpaaE9DWFQ3aWlCbWh1eFJDc0pWNGxjSDVlVmV0blRza2cK"
    },
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "$APP/db",
          "$DOWNLOAD/**",
          "$RESOURCE/**",
          "$USER/**"
        ]
      }
    },
    "windows": [
      {
        "title": "ZenSpace",
        "width": 1220,
        "height": 700,
        "minWidth": 940,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "visible": false
      },
      {
        "width": 320,
        "height": 550,
        "decorations": false,
        "url": "splash.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}